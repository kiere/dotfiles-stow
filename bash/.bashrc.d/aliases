alias reload='source ~/.bashrc'
alias aliases='nvim ~/.bashrc.d/aliases'

# Modern CLI replacements
alias cat='bat --paging=never'
alias ls='eza'
alias ll='eza -la'
alias tree='eza --tree'
alias du='dust'

# Command Shortcuts
alias y='yazi'
alias n='nvim'
alias pm='podman'
alias pmc='podman-compose'
alias macsync='rsync -avhP --exclude ".DS_Store" --exclude "._*"'

# Git aliases
alias lg='lazygit'
alias gst='git status'
alias gc='git commit'
alias gca='git commit -a'
alias gd='git diff'
alias gdi='git diff --cached'

# Project aliases
alias dotfiles='cd ~/dotfiles'
alias outdoor='cd ~/work/code/outdoor_app/outdoor'
alias ginger='cd ~/work/code/ginger'
